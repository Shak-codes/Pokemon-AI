{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/pokemon/main.cc",
                "${workspaceFolder}/pokemon/move.cc",
                "${workspaceFolder}/pokemon/pokemon.cc",
                "${workspaceFolder}/pokemon/stats.cc",
                "-o",
                "${workspaceFolder}/myExecutable"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
